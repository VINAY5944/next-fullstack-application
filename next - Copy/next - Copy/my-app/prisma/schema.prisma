generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:NETSTAGER@2024@localhost:3306/your_database"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  posts     Post[]
  theme     Theme     @default(LIGHT)
  layout    Layout    @default(GRID)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  locationId Int
  location  Location  @relation(fields: [locationId], references: [id])
  arrangements Arrangement[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  image     String
  published Boolean
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  locationId Int
  location  Location  @relation(fields: [locationId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  name      String
  email     String
  body      String
}

model Location {
  id        Int      @id @default(autoincrement())
  name      String  
  users     User[]
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Arrangement {
  id        Int      @id @default(autoincrement())
  position1 Int
  position2 Int
  position3 Int
  position4 Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

enum Theme {
  LIGHT
  DARK
}

enum Layout {
  GRID
  LIST
  CUSTOM
}
